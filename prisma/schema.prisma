generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      String   // "TEACHER" | "STUDENT"
  createdAt DateTime @default(now())

  // Teacher Relations
  classroomsOwned Classroom[] @relation("TeacherClasses")

  // Student Relations
  classroomsEnrolled Classroom[] @relation("StudentClasses")
  submissions        Submission[]
}

model Classroom {
  id          String   @id @default(cuid())
  name        String
  description String?
  code        String   @unique // Join code
  teacherId   String
  teacher     User     @relation("TeacherClasses", fields: [teacherId], references: [id])
  
  students    User[]   @relation("StudentClasses")
  exercises   Exercise[]
  
  createdAt   DateTime @default(now())
}

model Exercise {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        String   @default("EQUIVALENCE") // EQUIVALENCE, TRUTH_TABLE, VALIDITY
  content     String   @default("{}") // JSON structure for specific type data
  solution    String   @default("{}") // JSON structure for grading
  explanation String?  // Personalized explanation shown after attempt
  
  // Legacy field
  formula     String?
  
  difficulty  String   // "EASY" | "MEDIUM" | "HARD"
  
  classroomId String
  classroom   Classroom @relation(fields: [classroomId], references: [id])
  
  submissions Submission[]
  
  createdAt   DateTime @default(now())
}

model Submission {
  id          String   @id @default(cuid())
  studentId   String
  student     User     @relation(fields: [studentId], references: [id])
  
  exerciseId  String
  exercise    Exercise @relation(fields: [exerciseId], references: [id])
  
  status      String   // "CORRECT" | "INCORRECT"
  
  createdAt   DateTime @default(now())
}
